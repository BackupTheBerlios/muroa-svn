#include "muroagui.h"

muroagui::muroagui(QWidget *parent)
    : QMainWindow(parent)
{
	ui.setupUi(this);

	connect(ui.actionExit, SIGNAL(triggered()), qApp, SLOT(quit()));
    connect(ui.actionOpen_Connection, SIGNAL(triggered()), this, SLOT(openConnection()));
    connect(ui.actionClose_Connection, SIGNAL(triggered()), &m_sm, SLOT(close()));

}

muroagui::~muroagui()
{

}



void muroagui::openConnection()
{
    m_sm.open("localhost", 2678);
}
